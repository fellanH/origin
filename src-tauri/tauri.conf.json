{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "origin",
  "version": "0.0.1",
  "identifier": "com.klarhimmel.origin",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self' plugin:; script-src 'self' plugin:; style-src 'self' 'unsafe-inline' plugin:"
    },
    "windows": [
      {
        "label": "main",
        "title": "origin",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": { "x": 14, "y": 22 },
        "acceptFirstMouse": true,
        "shadow": true,
        "visible": false,
        "backgroundColor": "#000000"
      }
    ]
  },
  "bundle": {
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "signingIdentity": "Developer ID Application: Felix Hellstrom (TEAMID)"
    }
  }
}
