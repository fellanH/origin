{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "origin",
  "version": "0.2.0",
  "identifier": "com.klarhimmel.origin",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self' plugin:; script-src 'self' plugin:; style-src 'self' 'unsafe-inline' plugin:; frame-src plugin:"
    },
    "windows": [
      {
        "label": "main",
        "title": "origin",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": { "x": 14, "y": 22 },
        "acceptFirstMouse": true,
        "shadow": true,
        "visible": false,
        "backgroundColor": "#000000"
      }
    ]
  },
  "bundle": {
    "resources": {
      "assets/plugins/**/*": "plugins/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "copyright": "Â© 2026 Klarhimmel AB",
    "macOS": {
      "entitlements": "./Entitlements.plist",
      "signingIdentity": "Developer ID Application: Felix Hellstrom (Z5H24J242R)",
      "minimumSystemVersion": "13.0",
      "dmg": {
        "windowSize": { "width": 660, "height": 400 },
        "appPosition": { "x": 180, "y": 190 },
        "applicationFolderPosition": { "x": 480, "y": 190 }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://github.com/fellanH/origin/releases/latest/download/latest.json"
      ]
    }
  }
}
